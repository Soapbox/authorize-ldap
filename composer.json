{
    "name": "soapbox/authorize-ldap",
    "description": "LDAP authorization strategy for SoapBox/Authorize.",
    "keywords": ["authentication", "ldap"],
    "license": "proprietary",
    "authors": [
        {
            "name": "Jaspaul Bola",
            "email": "jaspaul.b@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:soapbox/authorize.git"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "nicmart/string-template": "~0.1",
        "soapbox/authorize": "0.1.*"
    },
    "suggest" : {
        "ext-ldap": "The php ldap extension is used to run ldap commands."
    },
    "autoload": {
        "psr-0": {
            "SoapBox\\AuthorizeLdap\\": "src/"
        }
    },
    "minimum-stability": "stable"
}
